{
  "name": "react-tiny-tooltip",
  "version": "0.0.7",
  "description": "A simple, tiny, accessible, opinionated and lightweight tooltip library for React. Built with Stitches and Radix UI.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run build -- --watch",
    "build": "tsup src/index.tsx --format cjs,esm --dts --clean --minify",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lalit2005/react-tiny-tooltip.git"
  },
  "keywords": [
    "react-tooltip",
    "tooltip",
    "react-tiny-tooltip",
    "react-tooltip-lite"
  ],
  "author": "Lalit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lalit2005/react-tiny-tooltip/issues"
  },
  "homepage": "https://github.com/lalit2005/react-tiny-tooltip#readme",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "tsup": "^5.11.11",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^0.1.6",
    "@stitches/react": "^1.2.6"
  }
}
